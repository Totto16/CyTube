{
	"files": ["script.ts"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es2021", "dom"],
		"allowJs": true,
		"outDir": ".",
		"rootDir": ".",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noEmitOnError": true
	},
	"rules": {
		"triple-equals": true,
		"curly": true,
		"strict-boolean-expressions": true,
		"no-unnecessary-condition": true
	}
}
